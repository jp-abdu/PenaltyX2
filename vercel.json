{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "src/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,HEAD,PUT,PATCH,POST,DELETE",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept"
      }
    },
    {
      "src": "/health",
      "dest": "src/server.js"
    },
    {
      "src": "/",
      "dest": "src/server.js"
    },
    {
      "src": "/(.+\\.(js|css|png|jpg|jpeg|webp|avif|ico|svg|gif))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ]
}
